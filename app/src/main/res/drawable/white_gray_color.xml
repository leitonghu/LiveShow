<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/common_click_gray_backgroud" android:state_checked="true"></item>
    <!-- checked -->
    <item android:drawable="@color/common_click_gray_backgroud" android:state_selected="true"></item>
    <!-- selected -->
    <item android:drawable="@color/common_click_gray_backgroud" android:state_pressed="true" />
    <!-- pressed -->
    <item android:drawable="@color/common_click_gray_backgroud" android:state_focused="true" />
    <!-- focused -->
    <item android:drawable="@color/white_color" />
    <!-- default -->

</selector>